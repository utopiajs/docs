---
import AstroLink from "../core/AstroLink/index.astro";
import { isActive } from "../../utils/support";

const { item } = Astro.props;
---

<AstroLink
  href={item.link}
  classList={[
    "nav-bar-menu-link",
    {
      active: isActive(
        Astro.url.pathname,
        item.activeMatch || item.link,
        !!item.activeMatch,
      ),
    },
  ]}
>
  {item.text}
</AstroLink>

<style is:global>
  .nav-bar-menu-link {
    display: inline-block;
    padding: 0 12px;
    line-height: 54px;
    font-size: 13px;
    color: var(--astro-c-text-1);
    transition: color 0.25s;
    white-space: nowrap;
  }
</style>