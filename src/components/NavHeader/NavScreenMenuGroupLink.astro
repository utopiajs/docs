---
import AstroLink from "~/components/core/AstroLink/index.astro";
const { text, link } = Astro.props;
---

<AstroLink classList={["nav-screen-menu-group-link"]} href={link}>
  {text}
</AstroLink>

<style is:global>
  .nav-screen-menu-group-link {
    display: block;
    margin-left: 12px;
    line-height: 32px;
    font-size: 14px;
    font-weight: 400;
    color: var(--astro-c-text-1);
    transition: color 0.25s;
  }
</style>