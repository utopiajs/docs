---
import NavAppearance from './NavAppearance.astro';
---

<header class="header">
  <div class="container">
    <a class="logo-content" href="/">
      <img src="/assets/logo-main.png" class="logo" />
      <span class="text">Utopia</span>
    </a>
    <div class="content">
      <div class="appearance">
        <NavAppearance>
          
        </NavAppearance>
      </div>
    </div>
  </div>
</header>

<style>
  .header {
    position: fixed;
    width: 100%;
    height: 55px;
    border-bottom: solid 1px var(--astro-c-divider-light);
    background-color: var(--astro-c-bg);
  }
  .container {
    display: flex;
    justify-content: space-around;
    max-width: 1360px;
    height: 100%;
    margin: 0 auto;
    padding: 0 32px;
  }
  .logo-content {
    display: flex;
    align-items: center;
    height: 100%;
    color: inherit;
    transition: opacity 0.25s;
    &:hover {
      opacity: 0.6;
    }
  }
  .logo {
    width: 36px;
  }
  .text {
    padding-left: 8px;
    font-size: 16px;
    font-weight: 600;
  }
  .content {
    display: flex;
    align-items: center;
    justify-content: flex-end;
    flex-grow: 1;
  }
</style>
