---
import NavAppearance from "./NavAppearance.astro";
import NavSocialLinks from "./NavSocialLinks.astro";
import NavBarMenu from "./NavBarMenu.astro";
import NavBarHamburger from "./NavBarHamburger.astro";
import NavBarScreen from "./NavBarScreen.astro";
---

<header class="header">
  <div class="container">
    <a class="logo-content" href="/">
      <img src="/assets/logo-main-pure.png" class="logo" />
      <span class="text">Utopia</span>
    </a>
    <div class="content">
      <NavBarMenu />
      <div class="appearance">
        <NavAppearance />
      </div>
      <div class="social-links">
        <NavSocialLinks />
      </div>
      <div class="nav-bar-hamburger-content">
        <NavBarHamburger />
      </div>
    </div>
  </div>

  <div class="nav-screen-content" id="nav-screen-content">
    <NavBarScreen />
  </div>
</header>

<script>
  const navHamburgerDom = document.getElementById("nav-bar-hamburger-content");
  const navScreenContentDom = document.getElementById("nav-screen-content");
  navHamburgerDom.addEventListener("click", (e) => {
    const currentTarget = e.currentTarget as HTMLSpanElement;
    navScreenContentDom.classList.toggle("open");
    currentTarget.classList.toggle("active");
  });
</script>

<style>
  .header {
    position: fixed;
    width: 100%;
    height: 55px;
    border-bottom: solid 1px var(--astro-c-divider-light);
    background-color: var(--astro-c-bg);
    z-index: 99;
  }
  .container {
    display: flex;
    justify-content: space-around;
    max-width: 1360px;
    height: 100%;
    margin: 0 auto;
    padding: 0 12px 0 24px;
  }
  .logo-content {
    display: flex;
    align-items: center;
    height: 100%;
    color: inherit;
    transition: opacity 0.25s;
    &:hover {
      opacity: 0.6;
    }
  }
  .logo {
    width: 36px;
  }
  .text {
    padding-left: 8px;
    font-size: 16px;
    font-weight: 600;
  }
  .content {
    display: flex;
    align-items: center;
    justify-content: flex-end;
    flex-grow: 1;
  }
  .appearance {
    display: none;
  }
  .social-links {
    display: none;
    margin-left: 12px;
  }
  .nav-bar-hamburger-content {
    display: block;
  }
  .nav-screen-content {
    display: none;
    position: fixed;
    top: 55px;
    right: 0;
    bottom: 0;
    left: 0;
    padding: 0 32px;
    width: 100%;
    background-color: var(--astro-c-bg);
    transition: background-color 0.5s;
    overflow-y: auto;
  }
  .nav-screen-content.open {
    display: block;
  }
  @media (min-width: 768px) {
    .container {
      padding: 0 32px;
    }
    .appearance {
      display: block;
    }
    .social-links {
      display: flex;
    }
    .nav-bar-hamburger-content {
      display: none;
    }
  }
</style>
