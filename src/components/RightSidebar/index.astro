---
import TableOfContents from './TableOfContent';
import generateToc from '../../utils/generateToc';

const { headings } = Astro.props;
---

<nav>
  {
    headings?.length > 0 && (
      <TableOfContents client:media="(min-width: 50em)" toc={generateToc(headings)} labels={{ onThisPage: '在本页内' }} />
    )
  }
</nav>

<style>
  nav {
    width: 100%;
    overflow: auto;
  }
</style>
