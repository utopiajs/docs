---
import classNames from 'classnames';
const { href, active, className = '' } = Astro.props;
const isExternal = href && /^[a-z]+:/i.test(href);
---

<a
  class={classNames(['astro-link', className, { active }])}
  href={href}
  target={isExternal ? '_blank' : undefined}
  rel={isExternal ? 'noopener noreferrer' : undefined}
>
  <slot />
</a>

<style>
  .astro-link {
    display: inline-block;
    padding: 0 12px;
    line-height: 54px;
    font-size: 13px;
    color: var(--astro-c-text-1);
    transition: color 0.25s;
    white-space: nowrap;
  }
  .astro-link:hover {
    color: var(--astro-c-brand);
  }
  .astro-link.active {
    border-bottom: 1px solid var(--astro-c-brand);
  }
</style>
